@model IEnumerable<DemoTask.Service.ViewModel.UserViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "User";
}
<section class="innerSection clearfix">
    <form class="form-inline" role="form" method="get" action="/User/">
        <div class="form-group">
            <label class="sr-only" for="exampleInputEmail2">Search By:</label>
        </div>
        <div class="form-group">
            <label class="sr-only">Search For:</label>
            <input id="search" name="search" type="text" class="form-control" placeholder="Search For">
        </div>
        <button type="submit" class="btn btn-default btn-primary">Search</button>
        <a class="btn btn-default btn-primary add-new" href="/Create">
            <i class="fa fa-plus hidden-xs"></i>add new
        </a>
    </form>
    <h3>User information</h3>
    <table class="table demo dataTable" data-filter="#filter" data-page-size="20">
        <thead>
            <tr>
                <th>
                    @Html.LabelFor(r => Model.First().Id)
                </th>
                <th>
                    @Html.LabelFor(r => Model.First().UserName)
                </th>
                <th>
                    @Html.LabelFor(r => Model.First().FullName)
                </th>
                <th>
                    @Html.LabelFor(r => Model.First().Password)
                </th>
                <th>
                    @Html.LabelFor(r => Model.First().RoleName)
                </th>
                <th>
                    @Html.LabelFor(r => Model.First().Email)
                </th>
                <th data-sort-ignore="true">
                    @Html.LabelFor(r => Model.First().IsActive)
                </th>
                <th data-sort-ignore="true" class="RightAlign">
                    @Html.Label("Action")
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.Raw(item.Id)
                    </td>
                    <td>
                        @Html.Raw(item.UserName)
                    </td>
                    <td>
                        @Html.Raw(item.FullName)
                    </td>
                    <td>@(item.Password != null ? new string('*', item.Password.Length) : "")</td>
                    <td>
                        @Html.Raw(item.RoleName)
                    </td>
                    <td>
                        @Html.Raw(item.Email)
                    </td>
                    <td>
                        @(item.IsActive ? "True" : "Inactive")
                    </td>
                    <td class="RightAlign">
                        <a asp-controller="User" asp-action="Edit" asp-route-id="@item.Id" class="row-edit"><i class="fa fa-edit"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="pagination pagination-centered itemPagination"></div>
</section>
